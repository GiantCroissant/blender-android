<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.giantcroissant.blender.SearchActivity"
    android:background="@color/SearchBackgroundColor"
    android:theme="@style/Theme.Transparent"
    android:clickable="true"
    android:onClick="onClick"
    android:id="@+id/searchviewBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/searchviewbackground"
        android:background="@color/White">

        <SearchView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:autoText="false"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:maxLines="1"
            android:maxLength="10"
            android:minLines="1"
            android:hint="Search"
            android:text="Search"
            android:queryHint="Search"
            android:searchIcon="@drawable/ic_search"
            android:closeIcon="@drawable/ic_clear"
            android:searchHintIcon="@drawable/ic_search"
            android:layout_alignParentLeft="true"
            android:theme="@style/MySearchViewStyle"
            style="@style/MySearchViewStyle"
            android:orientation="vertical" />

    </RelativeLayout>
</RelativeLayout>
