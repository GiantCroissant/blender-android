<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giantcroissant.blender.UserDataFragment"
    android:background="#EEEEEE">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:background="@color/White"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EEEEEE">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="健康履歷"
                android:id="@+id/userRecordCookBookButton"
                android:background="@color/ColorPrimary"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:id="@+id/userRecordCookBookButton_SelectColor"
                android:layout_weight="1"
                android:src="@color/TabNoSelectColor"
                android:background="@color/BackgroundColor"
                android:scaleType="matrix"
                android:layout_gravity="bottom"
                android:onClick="onClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EEEEEE">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="收藏食譜"
                android:id="@+id/userLikeCookBookButton"
                android:background="@color/ColorPrimary"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:id="@+id/userLikeCookBookButton_SelectColor"
                android:layout_weight="1"
                android:src="@color/TabNoSelectColor"
                android:layout_toEndOf="@+id/userRecordCookBookButton"
                android:layout_toRightOf="@+id/userRecordCookBookButton"
                android:background="@color/BackgroundColor"
                android:scaleType="matrix"
                android:layout_gravity="bottom"
                android:nestedScrollingEnabled="false"
                android:onClick="onClick" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:background="#EEEEEE">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usercookbooklistView"
            android:dividerHeight="0dp"
            android:divider="@color/BackgroundColor" />
    </RelativeLayout>

</RelativeLayout>
