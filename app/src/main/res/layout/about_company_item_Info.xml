<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="152dp"
    android:orientation="horizontal"
    android:measureWithLargestChild="true">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/company_item_icon"
        android:layout_weight="1.4"
        android:src="@drawable/itemicon"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/company_item_icon"
        android:layout_toEndOf="@+id/company_item_icon"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="磨豆機"
            android:id="@+id/company_item_name"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textSize="@dimen/Subheader"
            android:layout_toRightOf="@+id/company_item_icon"
            android:layout_toEndOf="@+id/company_item_icon"
            android:textColor="@color/cFF336900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/company_item_content"
            android:layout_weight="1"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Caption" />
    </LinearLayout>

</RelativeLayout>
