<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#EEEEEE">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:elevation="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="124dp"
            android:id="@+id/cookbookicon"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/pictures_01"
            android:background="@color/White" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_weight="0.7"
            android:paddingTop="20dp"
            android:layout_toRightOf="@+id/cookbookicon"
            android:layout_toEndOf="@+id/cookbookicon"
            android:background="@color/White">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="葡萄檸檬汁"
                android:id="@+id/cookbooknameTextView"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textSize="@dimen/Subheader"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/ColorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="葡萄、檸檬、蜂蜜"
                android:id="@+id/ingredientTextView"
                android:layout_weight="1"
                android:textSize="@dimen/Body1"
                android:paddingLeft="20dp"
                android:gravity="top"
                android:paddingTop="5dp"
                android:textColor="@color/c54000000" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
