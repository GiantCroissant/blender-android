<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giantcroissant.blender.CompanyItemActivity">


    <ImageView
        android:layout_width="328dp"
        android:layout_height="246dp"
        android:id="@+id/company_item_icon"
        android:layout_weight="1.4"
        android:src="@drawable/itemicon"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/company_item_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"

            android:text="磨豆機"
            android:id="@+id/company_item_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/Headline"
            android:layout_toRightOf="@+id/company_item_icon"
            android:layout_toEndOf="@+id/company_item_icon"
            android:textColor="@color/cFF336900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="New Text"
            android:id="@+id/company_item_w"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Body1"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="New Text"
            android:id="@+id/company_item_ac"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Body1"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="New Text"
            android:id="@+id/company_item_cc"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Body1"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="New Text"
            android:id="@+id/company_item_mm"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Body1"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="New Text"
            android:id="@+id/company_item_kg"
            android:textColor="@color/c54000000"
            android:textSize="@dimen/Body1"
            android:gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
